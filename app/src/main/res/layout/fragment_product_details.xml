<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            style="@style/KanitSemiBold.M"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutToolbar"
        app:layout_constraintBottom_toTopOf="@id/btnAddToCart">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/view_holder_product_photo"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.kingfisher.easyviewindicator.RecyclerViewIndicator
                android:id="@+id/recyclerViewIndicator"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:avi_animation_enable="false"
                app:avi_drawable="@drawable/ic_indicator"
                app:avi_drawable_unselected="@drawable/ic_indicator_grey"
                app:avi_height="@dimen/margin_padding_4"
                app:avi_margin="@dimen/margin_padding_2"
                app:avi_width="@dimen/margin_padding_4"
                app:layout_constraintBottom_toBottomOf="@+id/rvProductPhotos"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCategory"
                tools:text="Men's Shoes"
                style="@style/KanitMedium.M"
                android:textColor="@color/color_text_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/rvProductPhotos"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRating"
                tools:text="(5)"
                style="@style/KanitMedium.M"
                android:textColor="@color/color_text_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/rvProductPhotos"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivRating"
                android:clickable="true"
                android:tint="@color/color_new_orange"
                android:src="@drawable/ic_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/margin_padding_4"
                app:layout_constraintBottom_toBottomOf="@id/tvRating"
                app:layout_constraintTop_toTopOf="@id/tvRating"
                app:layout_constraintEnd_toStartOf="@id/tvRating"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                tools:text="Nike Air Max"
                style="@style/KanitMedium.2X"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvCategory"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                tools:text="$290.00"
                style="@style/KanitMedium.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvCategory"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSize"
                android:text="Size:"
                style="@style/KanitMedium.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEUSize"
                android:text="EU"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/margin_padding_8"
                style="@style/KanitRegular.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUKSize"
                android:text="UK"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/margin_padding_8"
                style="@style/KanitRegular.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                app:layout_constraintEnd_toStartOf="@id/tvEUSize"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUSSize"
                android:text="US"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/margin_padding_8"
                style="@style/KanitBold.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                app:layout_constraintEnd_toStartOf="@id/tvUKSize"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSizes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/view_holder_size"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvSize"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:text="Description"
                style="@style/KanitRegular.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/rvSizes"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReadMoreDescription"
                android:background="@drawable/bg_circle_grey_border"
                android:clickable="true"
                android:tint="@color/black"
                android:src="@drawable/ic_temp_down"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/margin_padding_4"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintBottom_toBottomOf="@id/tvDescription"
                app:layout_constraintTop_toTopOf="@id/tvDescription"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMoreDescription"
                android:visibility="gone"
                tools:text="@string/lorem_ipsm_blah_blah"
                style="@style/KanitRegular.S"
                android:textColor="@color/color_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/viewOne"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/color_text_grey_white"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMoreDescription"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPolicy"
                android:text="Free Delivery and Returns"
                style="@style/KanitRegular.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/viewOne"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReadMorePolicy"
                android:background="@drawable/bg_circle_grey_border"
                android:clickable="true"
                android:tint="@color/black"
                android:src="@drawable/ic_temp_down"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/margin_padding_4"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintBottom_toBottomOf="@id/tvPolicy"
                app:layout_constraintTop_toTopOf="@id/tvPolicy"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMorePolicy"
                android:visibility="gone"
                android:text="@string/lorem_ipsm_blah_blah"
                style="@style/KanitRegular.S"
                android:textColor="@color/color_text_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/tvPolicy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/viewTwo"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/color_text_grey_white"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMorePolicy"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvColors"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/view_holder_color"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/viewTwo"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvQuantity"
                android:text="Quantity"
                style="@style/KanitRegular.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/rvColors"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIncrease"
                android:background="@drawable/bg_circle_grey_border"
                android:clickable="true"
                android:tint="@color/black"
                android:src="@drawable/ic_increase_product"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/margin_padding_8"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toTopOf="@id/tvQuantity"
                app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCurrentQuantity"
                android:text="1"
                style="@style/KanitRegular.M"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toBottomOf="@id/rvColors"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivIncrease"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDecrease"
                android:background="@drawable/bg_circle_grey_border"
                android:clickable="true"
                android:tint="@color/black"
                android:src="@drawable/ic_decrease_product"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/margin_padding_8"
                android:layout_margin="@dimen/margin_padding_16"
                app:layout_constraintTop_toTopOf="@id/tvQuantity"
                app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
                app:layout_constraintEnd_toStartOf="@id/tvCurrentQuantity"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:gravity="center"
        style="@style/KanitSemiBold.M"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_orange_clickable"
        android:layout_margin="@dimen/margin_padding_16"
        android:paddingStart="@dimen/margin_padding_8"
        android:paddingEnd="@dimen/margin_padding_8"
        android:paddingTop="@dimen/margin_padding_16"
        android:paddingBottom="@dimen/margin_padding_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>